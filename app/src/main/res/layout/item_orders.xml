<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/orders_icon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/icon_going_orders"
                    android:tint="@color/shadowColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/orders_icon"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/order_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:fontFamily="@font/firefans_regular"
                        android:gravity="center"
                        android:text="Order Name"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/food_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="1dp"
                            android:src="@drawable/icon_foods"
                            android:tint="@color/shadowColor" />

                        <TextView
                            android:id="@+id/item_counts"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"
                            android:layout_toRightOf="@+id/food_icon"
                            android:fontFamily="@font/firefans_regular"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:text="12 Items"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/item_total_amt"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_marginRight="15dp"
                            android:fontFamily="@font/firefans_regular"
                            android:gravity="center"
                            android:text="$ 500"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="1dp"
                        android:src="@drawable/icon_calendar"
                        android:tint="@color/shadowColor" />

                    <TextView
                        android:id="@+id/item_booked_date"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="7dp"
                        android:fontFamily="@font/firefans_regular"
                        android:gravity="center"
                        android:text="10 Mar, 2019 11:10 AM"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>