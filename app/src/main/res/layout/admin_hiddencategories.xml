<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgnd_color">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/items_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hidden_cate_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/back_arrow"
                android:tint="@color/white"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/cate_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hidden Categories"
                android:gravity="center"
                android:singleLine="true"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:fontFamily="@font/firefans_regular"
                android:textSize="16sp"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hiddencate_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>

</LinearLayout>