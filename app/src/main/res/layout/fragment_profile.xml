<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgnd_color"
    tools:context=".Users.UserFragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pro_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developer"
            android:textColorHint="@color/shadowColor"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="@font/firefans_regular"
            android:background="@android:color/transparent"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/pro_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="profile@gmail.com"
            android:textColorHint="@color/shadowColor"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textStyle="normal"
            android:gravity="center"
            android:fontFamily="@font/firefans_regular"
            android:background="@android:color/transparent"
            android:textSize="13sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/likes_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/profile_border">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/menu_favourite"
                    android:tint="@color/red"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/likes_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:layout_gravity="bottom"
                        android:textColorHint="@color/shadowColor"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:fontFamily="@font/firefans_regular"
                        android:background="@android:color/transparent"
                        android:textSize="26sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Likes"
                        android:textColorHint="@color/shadowColor"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/firefans_regular"
                        android:background="@android:color/transparent"
                        android:textSize="13sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/orders_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/profile_border">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/icon_going_orders"
                    android:tint="@color/red"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/orders_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:layout_gravity="bottom"
                        android:textColorHint="@color/shadowColor"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:fontFamily="@font/firefans_regular"
                        android:background="@android:color/transparent"
                        android:textSize="26sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Orders"
                        android:textColorHint="@color/shadowColor"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/firefans_regular"
                        android:background="@android:color/transparent"
                        android:textSize="13sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>